{
  "builders": [{
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "{{user `mirror`}}17.04/ubuntu-17.04-server-amd64.iso",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "output-ubuntu-17.04-amd64-{{build_type}}",
      "vm_name": "packer-ubuntu-17.04-amd64",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "disk_size": "{{user `disk_size`}}",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz ",
        "initrd=/install/initrd.gz ",
        "net.ifnames=0 ",
        "auto-install/enable=true ",
        "debconf/priority=critical ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/ubuntu-17.04/preseed.cfg ",
        "<enter>"
      ],
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "shutdown_command": "echo 'packer' | sudo systemctl poweroff",
      "keep_registered": true,
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
        ["modifyvm", "{{.Name}}", "--natpf1", "guest_ssh,tcp,,{{user `host_port`}},,22"]
      ]
  },
  {
    "type": "digitalocean",
    "image": "ubuntu-17-04-x64",
    "region": "{{user `do_region`}}",
    "size": "{{user `do_size`}}",
    "ssh_username": "{{user `ssh_password`}}"
  }
],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/ubuntu/apt.sh",
      "scripts/ubuntu/virtualbox.sh"
    ]
  }],
  "variables": {
    "mirror": "http://mirror.vorboss.net/ubuntu-releases/",
    "cpus": "1",
    "disk_size": "10000",
    "headless": "false",
    "iso_checksum": "4672ce371fb3c1170a9e71bc4b2810b9",
    "iso_checksum_type": "md5",
    "memory": "2048",
    "ssh_timeout": "60m",
    "ssh_username": "packer",
    "ssh_password": "packer",
    "host_port": "2201",
    "do_region": "lon1",
    "do_size": "512mb"
  }
}
